<%= form_tag({:controller => "statistics", :action => "publication_search"}, :method => "post") do %>
    <%= label_tag "Fecha Inicial ", "Fecha Inicial" %>
    <br />
    <%= select_date Date.today, prefix: :pub_start %>
    <br />
    <br />
    <%= label_tag "Fecha Final ", "Fecha Final" %>
    <br />
    <%= select_date Date.today, prefix: :pub_end %>
    <br />
    <br />
    <%= submit_tag "Buscar" %>
<% end %>