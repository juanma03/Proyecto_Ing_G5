<body class="fondo">
  <div class="container">
    
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel bestnid-primary">
          <div class="panel-heading">
            <h3><%= @prod.nombre %> </h3>
          </div>
          <div class="panel-body">
