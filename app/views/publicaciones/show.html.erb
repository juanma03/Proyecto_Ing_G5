              <div class="well">
                <%= image_tag @prod.imagen, size: '350x300' ,:alt => "Facebook", :title => "Facebook"%>
              </div>
            </div>
            <div class="col-md-5 ">
              <div class="well well-lg">
                <%= @prod.descripcion %>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            Fecha de publicación: <%= @prod.created_at.strftime("%d %b %y") %>
          </div>
        </div>
      </div>
    </div>

