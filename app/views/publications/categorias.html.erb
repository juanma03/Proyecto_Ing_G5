<body class="fondo">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <%= render 'orden' %>
      </div>
      <div class="col-md-4" style="text-align: right">
        <%= render 'filtro' %>
      </div>
    </div>
    
    <br>

    <div class="row">
      <div class="col-md-2">
        <%= render 'menu_categorias' %>
      </div>

      <div class="col-md-8">
        <% if @cat.size == 0 %>
        <div class="no_producto">
          <h3 style="text-align: center">No hay productos en esta categor√≠a.</h3>
        </div>
        <% end %>
        <div id="container" class="js-isotope" data-isotope-options='{ "itemSelector": ".item", "getSortData": { "name": ".name", "category": "[data-category]" } }'>
          <div class="ordenador">
            <%@cat.all.each do |pub| %>
            <%= render "publication",pub: pub %>
            <% end %>
          </div>
        </div>
      </div>
      


      <div class="col-md-2">
        <% if user_signed_in? %>
        <%= render "menu_usuario"%>
        <% end %>
      </div>
    </div>
  </div>
</body>