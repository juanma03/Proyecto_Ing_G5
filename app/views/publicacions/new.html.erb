<h2>Crear Publicacion</h2>

<%= simple_form_for @publicacion, url:{action:"create"} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre, required: true, autofocus: true, label: false, placeholder: 'Titulo' %>
    <%= f.input :descripcion, required: true, label: false, placeholder: 'Descripcion', hint: "Máximo 300 caracteres", input_html:{maxlength: 300}%>
    <%= f.input :imagen, required: true, label: false, placeholder: 'Link de imagen' %>
    <%= f.input :categoria, required: true, label: 'Elija la categoria del producto', collection: [ "Comestibles", "Deportes", "Electrodomesticos", "Electrónica", "Indumentaria", "Inmuebles", "Muebles", "Joyeria", "Vehiculos", "Otros"] %>
  	<%= f.input :vencimiento, collection: 15..30, required: true, label: 'Duracion de la subasta' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
