<body class="fondo">
  <div class="container-fluid">
    
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel bestnid-primary">
          <div class="panel-heading">
            <h3><%= @prod.nombre %> </h3>
          </div>
          <div class="panel-body">
            <div class="col-md-7">
              <div class="well">
                <%= image_tag @prod.imagen, size: '350x300' ,:alt => @prod.nombre, :title => @prod.nombre %>
              </div>
            </div>
            <div class="col-md-5 ">
              <div class="well well-lg">
                <%= @prod.descripcion %>
              </div>
            </div>
          </div>
          <div class="panel-footer">
            <div class="row">
              <div class="col-md-6">
                Fecha de publicación: <%= @prod.created_at.strftime("%d %b %y") %>
              </div>
              <div class="col-md-6" style="text-align: right">
                Fecha de vencimiento: <%= @prod.vencimiento.strftime("%d %b %y") %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default widget">
            <div class="panel-heading">
              <h3 class="panel-title"> Comentarios</h3>
            </div>
            <div class="panel-body">
                <ul class="list-group">
                  <% if @prod.consulta.blank? %>
                    <li class="list-group-item">
                      <% if current_user.id != @prod.user_id %>
                        <p>Aún no hay consultas en esta publicación</p>
                      <%else%>
                        <p>Aún no hay consultas en tu publicación</p>
                      <%end%>
                    </li>
                  <% else %>
                    <%@prod.consulta.each do |c| %>
                      <li class="list-group-item">
                          <div class="row">
                            <%= render partial: "consulta/consult_question", locals: {consult: c} %>
                            <%= render partial: "consulta/consult_answer", locals: {consult: c} %>
                          </div>
                      </li>
                    <%end%>
                  <%end%>
                  <% if user_signed_in? %>
                    <% if current_user.id != @prod.user_id %>
                      <li class="list-group-item">
                        <div class="row">
                          <%= render partial: "consulta/consult_form", locals: {publicacion: @prod} %>  
                        </div>
                      </li>
                    <%end%>
                  <%end%>
                </ul>
            </div>
        </div>
      </div>
    </div>

  <% if user_signed_in? %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default widget">
          <% if current_user.id == @prod.user_id %>
            <div class="panel-heading">
                <h3 class="panel-title">
                    Ofertas que te hicieron</h3>
            </div>

            <div class="panel-body">
                    <ul class="list-group">
                      <% if @prod.oferta.blank? %>
                        <li class="list-group-item">
                          <p>Aún no hay ofertas en tu publicación</p>
                        </li>
                      <% else %>
                        <%@prod.oferta.each do |p| %>
                          <li class="list-group-item">
                            <div class="row">
                              <div class="col-xs-10 col-md-12">
                                <div class="list-group-item pregunta">
                                  <p><%= p.necesidad %> </p>
                                  <div class="row">
                                    <div class="col-md-10">
                                      <br>
                                      <div class="mic-info-pregunta">
                                        <%= p.created_at.strftime("%d %b %y") %>
                                      </div>
                                    </div>
                                    <div class="col-md-2">
                                      <a href="#" class="btn btn-default">Aceptar oferta</a>
                                    </div>
                                      </div>
                                  </div>
                              </div>
                          </li>
                        <% end %>
                      <%end%>
                    </ul>
            </div>
            <% elsif @nooferte %>
              <div class="panel-heading">
                <h3 class="panel-title">Haz tu oferta</h3>
              </div>
              <div class="panel-body">
                  <ul class="list-group">
                    <!--li class="list-group-item"-->
                      <div class="row">
                        <div class="col-xs-10 col-md-12">
                          <div class="list-group-item">
                              <%= simple_form_for ([@prod, Ofertum.new]),
                                    html: { class: 'form-inline', style: 'text-align: center'} do |f| %>
                                <div class="form-inputs">
                                  <%= f.input :necesidad, required: true, label: false, placeholder: 'Describe tu necesidad en pocas palabras...', :input_html => {:style => 'height: 50px', :maxlength => 140, :size => 132}%>
                                  <br>
                                  <%= f.input :monto, required: true, label: 'Ingresa el Monto (AR$) que estas dispuesto a pagar' %>
                                  <br>
                                  <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }%>
                                </div>

                                <div class="form-actions">
                                  <%= f.button :submit, "Enviar oferta" %>
                                </div>
                              <% end %>
                          </div>
                        </div>
                      </div>
                    <!--/li-->
                  </ul>
              </div>
            <%else%>
              <div class="panel-heading">
                <h3 class="panel-title">¡Ya hiciste tu oferta!</h3>
              </div>
              <div class="panel-body">
                <ul class="list-group">
                  <li class="list-group-item">
                    <div class="row">
                      <div class="col-xs-10 col-md-12">
                        <div class="list-group-item pregunta">
                          <%@mioferta.each do |o| %>
                          <p><b>Necesidad: </b><%= o.necesidad %> </p>
                          <p><b>Monto (AR$): </b><%= o.monto %> </p>
                          <div class="mic-info-pregunta">
                            <%end%>
                          </div>
                        </div>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            <% end %>
          </div>
        </div>
      </div>  
    <%end%>  
  </div>
</body>