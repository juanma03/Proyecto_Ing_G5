<div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <h2>Unite hoy a Bestnid</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
          html: { class: 'form-inline' }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :nombre, required: true, autofocus: true, label: false, placeholder: 'Nombre' %>
            <%= f.input :apellido, required: true, label: false, placeholder: 'Apellido'%>
            <%= f.input :email, required: true, label: false, placeholder: 'Email'%>
            <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable), label: false,placeholder: 'Contraseña' %>
            <%= f.input :password_confirmation, required: true, label: false,placeholder: 'Repetir contraseña' %>
            <%= f.input :localidad, required: true, label: false, placeholder: 'Localidad'%>
            <%= f.input :direccion, required: true, label: false, placeholder: 'Direccion'%>
            <%= f.input :telefono, required: true, label: false, placeholder: 'Telefono'%>
            <%= f.input :mayor_18, label: 'Confirmo mayoria de edad'%>
            <%= f.input :vencimiento_tarjeta, required: true, label: false, placeholder: 'Fecha de vencimiento de la tarjeta'%>
            <%= f.input :numero_tarjeta, required: true, label: false, placeholder: 'Numero de tarjeta de crédito'%>
            <%= f.input :titular_tarjeta, required: true, label: false, placeholder: 'Titular de tarjeta de credito'%>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Registrate" %>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
</div>