<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, disabled:true, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Esperando confirmacon de: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :name, required: true, autofocus: false, label: "Nombre", placeholder: 'Nombre' %>
    <%= f.input :last_name, required: true, label: "Apellido", placeholder: 'Apellido'%>
    <%= f.input :city, required: true, label: "Ciudad", placeholder: 'Localidad'%>
    <%= f.input :address, required: true, label: "Dirección", placeholder: 'Dirección'%>
    <%= f.input :phone, required: true, label: "Teléfono", placeholder: 'Teléfono'%>
    <%= f.input :credit_card_expiration_date, :discard_day => true, required: true, label: 'Fecha de vencimiento de la tarjeta'%>
    <%= f.input :credit_card_number, required: true, label: "Número de tarjeta de crédito", placeholder: 'Numero de tarjeta de crédito'%>
    <%= f.input :credit_card_owner, required: true, label: "Titular de tarjeta de crédito", placeholder: 'Titular de tarjeta de crédito'%>

    <%= f.input :password, label: "Contraseña",autocomplete: "off", hint: "Dejar en blanco si no se desea modificar", required: false %>
    <%= f.input :password_confirmation, label:"Repetir contraseña",required: false %>
    <%= f.input :current_password, label:"Contraseña actual",hint: "Ingresar contraseña actual para guardar cambios", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualizar" %>
  </div>
<% end %>

<p><%= link_to "Eliminar Cuenta", registration_path(resource_name), data: { confirm: "¡Estas Seguro?" }, method: :delete %></p>

<%= link_to "Atras", :back %>
