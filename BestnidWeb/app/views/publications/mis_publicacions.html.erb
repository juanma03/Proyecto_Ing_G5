<body class="fondo">

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-4 col-md-offset-2">
        <%= render 'orden' %>
      </div>
    </div>

    <br>
    <div class="row">
      <div class="col-md-2">
        <%= render 'menu_categorias' %>
      </div>
      <div class="col-md-8">
        <div class="row row-centered ">
          <div class="col-md-12 col-centered">
            <h2 style="text-align: right">Mis publicaciones</h2>
            <h3>Publicaciones en curso</h3>
            <div id="container" class="js-isotope" data-isotope-options='{ "itemSelector": ".item", "getSortData": { "name": ".name", "category": "[data-category]" } }'>
              <div class="ordenador">
                <%@p.activas.all.each do |pub| %>
                <%= render "publication",pub: pub %>
                <% end %>
              </div>
            </div>
            <h3>Publicaciones vencidas</h3>
            <div id="container" class="js-isotope" data-isotope-options='{ "itemSelector": ".item", "getSortData": { "name": ".name", "category": "[data-category]" } }'>
              <div class="ordenador">
                <%@p.inactivas.en_curso.all.each do |pub| %>
                <%= render "publication",pub: pub %>
                <% end %>
              </div>
            </div>
            <h3>Publicaciones finalizadas</h3>
            <div id="container" class="js-isotope" data-isotope-options='{ "itemSelector": ".item", "getSortData": { "name": ".name", "category": "[data-category]" } }'>
              <div class="ordenador">
                <%@p.finalizadas.each do |pub| %>
                <%= render "publication",pub: pub %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-2">
        <% if user_signed_in? %>
        <%= render "menu_usuario"%>
        <% end %>
      </div>
    </div>
  </div>
</body>